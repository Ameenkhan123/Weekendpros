<div class="container"> 
	<div class="row">
		<div class="col-sm-6">
			<% if user_signed_in? %>
			<% else %>
				<h2>Want to be  a pro?</h2>
				<div class="social-networks">
					<a href="users/auth/linkedin" class="btn btn-ln twitter"><i class="fa fa-linkedin"></i> Linkedin</a>
					<%#= link_to "Sign in with Linkedin",user_linkedin_omniauth_authorize_path(), class: "btn btn-success" %>
				</div>
			<% end %>
		</div>
		<div class="col-sm-6">
			<% if user_signed_in? %>
			<% else %>
				<h2>Want do Weekend pro?</h2>
				<div class="social-buttons">
					<%= link_to "Sign up", new_user_registration_path, class: "btn btn-success ", id: "success" %>
					<a href="users/auth/facebook" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
					<a href="users/auth/google_oauth2" class="btn btn-g"><i class="fa fa-google-plus"></i> Google</a>
					<%#= link_to "Sign in with Facebook",user_facebook_omniauth_authorize_path(),class: "btn btn-primary" %>
				  <%#= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path(), class: "btn btn-success"  %>
				</div>
			<% end %>
		</div>
	</div>
</div>